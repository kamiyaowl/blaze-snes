{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "BlazeSnes"
            ],
            "group": "none",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-c",
                "Release"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run - docker",
            "command": "docker-compose",
            "type": "shell",
            "args": [
                "run",
                "run"
            ],
            "group": "none",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish - docker",
            "command": "docker-compose",
            "type": "shell",
            "args": [
                "run",
                "publish",
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test - docker",
            "command": "docker-compose",
            "type": "shell",
            "args": [
                "run",
                "test",
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
    ]
}